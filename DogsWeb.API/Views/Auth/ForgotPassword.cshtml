@model Views_Auth_ForgotPassword
<h2>Forgot Password</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" action="forgotpassword" enctype="application/json">
            <div  class="text-danger"></div>
            <div class="form-group">
                <label name="Email"></label>
                <input Model[Email] class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>